<div class="banner">
  <div class="banner-content">
    <h1>Edo's Cocktails</h1>
    <p><span id="banner-typed-text"></span></p>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
      <% if cocktail.photo.key? %>
        <% background_url = cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>
      <% else %>
        <% background_url = 'https://source.unsplash.com/500x400/?cocktail' %>
      <% end %>
        <div class="card mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= background_url %>')">
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
          <%= link_to "", cocktail_path(cocktail), class: 'card-link' %>
          <%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?" }, class: "delete-button" do %>
          <i class="fa fa-trash destroy_dose ml-2"></i>
        <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
